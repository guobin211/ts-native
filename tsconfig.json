{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "ts-compiler/*": ["./crates/ts-compiler/lib/*"],
            "ts-parser/*": ["./crates/ts-parser/lib/*"],
            "ts-runtime/*": ["./crates/ts-runtime/lib/*"],
            "ts-std/*": ["./crates/ts-std/lib/*"]
        }
    }
}
